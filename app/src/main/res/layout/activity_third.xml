<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Verify your phone"
        android:textColor="#000"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />
    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Enter the code from the SMS sent to"
       android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:hint="Number"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_below="@id/textView2"
        android:textSize="@dimen/_15ssp"
        android:layout_centerHorizontal="true"></TextView>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="X"
        android:inputType="number"
        android:layout_below="@id/number"
        android:paddingHorizontal="@dimen/_15sdp"></EditText>

    <EditText
        android:id="@+id/edit2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_20sdp"
       android:layout_toEndOf="@id/edit1"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="X"
        android:inputType="number"
        android:layout_below="@id/number"
        android:paddingHorizontal="@dimen/_15sdp"></EditText>
    <EditText
        android:id="@+id/edit3"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_toEndOf="@id/edit2"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="X"
        android:inputType="number"
        android:layout_below="@id/number"
        android:paddingHorizontal="@dimen/_15sdp"></EditText>
    <EditText
        android:id="@+id/edit4"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_toEndOf="@id/edit3"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="X"
        android:inputType="number"
        android:layout_below="@id/number"
        android:paddingHorizontal="@dimen/_15sdp"></EditText>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/button_shape"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/button"
        android:layout_below="@id/edit2"></Button>

</RelativeLayout>